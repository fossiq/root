@top Query { statement }

statement { pipelineExpression }

pipelineExpression { expression (Pipe expression)* }

expression {
  Identifier |
  Number |
  String
}

@tokens {
  Pipe { "|" }
  Identifier { $[a-zA-Z_] $[a-zA-Z0-9_]* }
  Number { @digit+ }
  String { '"' (!["\\\n] | "\\" _)* '"' }
  LineComment { "//" ![\n]* }
  whitespace { $[ \t\n\r]+ }
}

@skip { whitespace | LineComment }
