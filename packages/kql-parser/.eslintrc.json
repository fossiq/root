{
  "extends": ["../../.eslintrc.json"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["bun:test"],
            "message": "Test utilities from 'bun:test' should not be imported in src/. Move test code to tests/ folder."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["tests/**/*.ts", "scripts/**/*.ts"],
      "rules": {
        "no-restricted-imports": "off"
      }
    }
  ]
}
