{
  "name": "@fossiq/kql-parser",
  "version": "0.1.1",
  "description": "A TypeScript parser for Kusto Query Language (KQL) built with tree-sitter",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "grammar.js",
    "binding.gyp",
    "README.md"
  ],
  "keywords": [
    "kql",
    "kusto",
    "parser",
    "tree-sitter",
    "azure",
    "data-explorer",
    "query-language",
    "ast"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:fossiq/root.git",
    "directory": "packages/kql-parser"
  },
  "bugs": {
    "url": "https://github.com/fossiq/root/issues"
  },
  "homepage": "https://github.com/fossiq/root/tree/main/packages/kql-parser#readme",
  "author": "Sushruth Sastry",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "compile-grammar": "bun src/grammar/compile.ts",
    "generate": "bun run compile-grammar && tree-sitter generate",
    "build": "bun run generate && tsc",
    "prebuild": "bun run generate",
    "prepublishOnly": "bun run build && bun run test",

    "test": "bun test tests",
    "test:watch": "bun test tests --watch"
  },
  "dependencies": {
    "tree-sitter": "^0.21.0",
    "tree-sitter-cli": "^0.25.10",
    "web-tree-sitter": "^0.22.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.4",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
